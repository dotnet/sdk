<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="12.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <Target Name="LayoutWebPackage">
    <ItemGroup>
      <CopyLocalBuildFile Include="$(OutDir)webbuild\**\*.*" />
      <CopyLocalBuildFile>
        <RelativePath>build\%(RecursiveDir)</RelativePath>
      </CopyLocalBuildFile>
    </ItemGroup>

    <Copy SourceFiles="@(CopyLocalBuildFile)"
          DestinationFiles="$(WebPackagesLayoutDir)%(CopyLocalBuildFile.RelativePath)\%(CopyLocalBuildFile.Filename)%(CopyLocalBuildFile.Extension)" />
  </Target>

</Project>