<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>$(ToolsetTargetFramework)</TargetFramework>
    <OutputType>Exe</OutputType>
    <CanRunTestAsTool>false</CanRunTestAsTool>
    <ExcludeFromSourceBuild>true</ExcludeFromSourceBuild>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\Cli\dotnet\dotnet.csproj" />
    <ProjectReference Include="..\Microsoft.NET.TestFramework\Microsoft.NET.TestFramework.csproj" />

    <ProjectReference Include="..\ArgumentsReflector\ArgumentsReflector.csproj"
                      ReferenceOutputAssembly="false"
                      OutputItemType="ArgumentsReflectorPublishItem"
                      Targets="PublishItemsOutputGroup;Publish" />
  </ItemGroup>

  <!-- _SuppressAllTargets condition is necessary as Arcade's ExcludeFrom* infra is sub-optimal
       which makes the target still run: https://github.com/dotnet/source-build/issues/4047 -->
  <Target Name="PrecompileScriptBuild"
          BeforeTargets="GetCopyToOutputDirectoryItems;GetCopyToPublishDirectoryItems"
          DependsOnTargets="ResolveProjectReferences"
          Condition="'$(_SuppressAllTargets)' != 'true'">
    <ItemGroup>
      <None Include="@(ArgumentsReflectorPublishItem)"
            CopyToOutputDirectory="PreserveNewest"
            CopyToPublishDirectory="PreserveNewest"
            Visible="false" />
    </ItemGroup>
  </Target>

</Project>
