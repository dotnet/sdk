<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>$(ToolsetTargetFramework)</TargetFramework>
    <OutputType>Exe</OutputType>
    <CanRunTestAsTool>false</CanRunTestAsTool>
    <ExcludeFromSourceBuild>true</ExcludeFromSourceBuild>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\Cli\dotnet\dotnet.csproj" />
    <ProjectReference Include="..\Microsoft.NET.TestFramework\Microsoft.NET.TestFramework.csproj" />
    <ProjectReference Include="..\ArgumentsReflector\ArgumentsReflector.csproj" ReferenceOutputAssembly="false" OutputItemType="ArgumentsReflectorOutput" />
  </ItemGroup>

  <!-- _SuppressAllTargets condition is necessary as Arcade's ExcludeFrom* infra is sub-optimal
       which makes the target still run: https://github.com/dotnet/source-build/issues/4047 -->
  <Target Name="PrecompileScriptBuild"
          BeforeTargets="PrepareForRun;Publish"
          DependsOnTargets="ResolveProjectReferences"
          Condition="'$(_SuppressAllTargets)' != 'true'">
    <PropertyGroup>
     <ArgumentsReflectorOutputDir Condition="'$(_IsPublishing)' == 'true'">$(PublishDir)</ArgumentsReflectorOutputDir>
     <ArgumentsReflectorOutputDir Condition="'$(_IsPublishing)' != 'true'">$(OutputPath)</ArgumentsReflectorOutputDir>
    </PropertyGroup>

    <ItemGroup>
      <ArgumentsReflectorOutputFile Include="$([System.IO.Path]::GetDirectoryName('%(ArgumentsReflectorOutput.Identity)'))\publish\**" />
    </ItemGroup>
    
    <Copy SourceFiles="@(ArgumentsReflectorOutputFile)"
          DestinationFolder="$(ArgumentsReflectorOutputDir)\%(RecursiveDir)"
          SkipUnchangedFiles="true" />
  </Target>

</Project>
