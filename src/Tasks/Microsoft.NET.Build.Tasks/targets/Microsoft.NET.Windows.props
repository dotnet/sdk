<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <_WinRTApisPackageName>Microsoft.Windows.SDK.NET.Ref</_WinRTApisPackageName>
  </PropertyGroup>
  <ItemGroup Condition=" '$(_IncludeWindowsSDKRefFrameworkReferences)' == 'true' ">
    <FrameworkReference Include="$(_WinRTApisPackageName)" IsImplicitlyDefined="true" Pack="false" PrivateAssets="All" />
  </ItemGroup>

  <!--https://github.com/dotnet/sdk/issues/12403-->
  <PropertyGroup>
    <_TargetFrameworkVersionValue>0.0</_TargetFrameworkVersionValue>
    <_WindowsDesktopSdkTargetFrameworkVersionFloor>3.0</_WindowsDesktopSdkTargetFrameworkVersionFloor>
  </PropertyGroup>
</Project>
