<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <!--
    ============================================================
                                     GenerateGlobalUsings

    Generates global using source to intermediate directory
    ============================================================
    -->
  <PropertyGroup>
    <GeneratedGlobalUsingsFile Condition="'$(GeneratedGlobalUsingsFile)' ==''">$(IntermediateOutputPath)$(MSBuildProjectName).GlobalUsings$(DefaultLanguageSourceExtension)</GeneratedGlobalUsingsFile>
    <GenerateGlobalUsings Condition="'$(GenerateGlobalUsings)' == '' and '$(LangVersion)' == 'preview'">true</GenerateGlobalUsings>
  </PropertyGroup>

  <ItemGroup Condition=" '$(TargetFrameworkIdentifier)' == '.NETCoreApp'
                      and $([MSBuild]::VersionGreaterThanOrEquals($(_TargetFrameworkVersionWithoutV), '6.0'))">
    <GlobalUsings Include="System" />
    <GlobalUsings Include="System.Collections.Generic" />
    <GlobalUsings Include="System.Linq" />
    <GlobalUsings Include="System.Net.Http" />
    <GlobalUsings Include="System.Net.Http.Json" />
  </ItemGroup>

  <!--
    Note that this must run before every invocation of CoreCompile to ensure that all compiler
    runs see the generated assembly info. There is at least one scenario involving Xaml
    where CoreCompile is invoked without other potential hooks such as Compile or CoreBuild,
    etc., so we hook directly on to CoreCompile. Furthermore, we  must run *after*
    PrepareForBuild to ensure that the intermediate directory has been created.

    Targets that generate Compile items are also expected to run before
    BeforeCompile targets (common targets convention).
   -->
  <Target Name="GenerateGlobalUsings"
          BeforeTargets="BeforeCompile;CoreCompile"
          DependsOnTargets="PrepareForBuild;CoreGenerateGlobalUsings"
          Condition="'$(GenerateGlobalUsings)' == 'true'" />

  <Target Name="CoreGenerateGlobalUsings"
          Outputs="$(GeneratedGlobalUsingsFile)">
    <ItemGroup>
      <_GlobalUsingsLines Include="// %3Cautogenerated />"/>
      <_GlobalUsingsLines Include="global using global::%(GlobalUsings.Identity)%3B"/>
    </ItemGroup>

    <WriteLinesToFile Lines="@(_GlobalUsingsLines)" File="$(GeneratedGlobalUsingsFile)" Overwrite="true" />

    <ItemGroup>
      <Compile Include="$(GeneratedGlobalUsingsFile)" />
      <FileWrites Include="$(GeneratedGlobalUsingsFile)" />
    </ItemGroup>
  </Target>

</Project>
