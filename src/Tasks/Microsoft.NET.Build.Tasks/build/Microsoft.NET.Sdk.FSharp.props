<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <!-- If any of these variables are set then we are building under the fsharp.sdk so use their logic -->
  <PropertyGroup Condition = "'$(_FscTaskAssemblyPath_net)' == '' and '$(_FscTaskAssemblyPath_netcoreapp1_0)' == '' and '$(_FscToolFullPath_net)' == '' and '$(_FscToolFullPath_netcoreapp1_0)' == ''">
    <NotBuildingUnderFSharpSdk>true</NotBuildingUnderFSharpSdk>
  </PropertyGroup>

  <Choose>
    <When Condition=" '$(MSBuildRuntimeType)' == 'core' ">
      <PropertyGroup>
         <FSharpPropsShim>$(MSBuildToolsPath)\FSharp\Microsoft.NET.Sdk.FSharp.props</FSharpPropsShim>
      </PropertyGroup>
    </When>
    <Otherwise>
      <PropertyGroup>
        <FSharpPropsShim>$(MSBuildExtensionsPath32)\Microsoft\VisualStudio\v$(VisualStudioVersion)\FSharp\Microsoft.NET.Sdk.FSharp.props</FSharpPropsShim>
      </PropertyGroup>
    </Otherwise>
  </Choose>

  <Import Condition="Exists('$(FSharpPropsShim)') and '$(NotBuildingUnderFSharpSdk)' == 'true'" Project="$(FSharpPropsShim)" />

</Project>
