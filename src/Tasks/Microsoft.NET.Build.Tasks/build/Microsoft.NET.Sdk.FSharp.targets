<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <!-- If any of these variables are set then we are building under the fsharp.sdk so use their logic -->
  <Choose>
    <When Condition=" '$(MSBuildRuntimeType)' == 'core' ">
      <PropertyGroup>
         <FSharpTargetsShim>$(MSBuildToolsPath)\FSharp\Microsoft.FSharp.targets</FSharpTargetsShim>
      </PropertyGroup>
    </When>
    <Otherwise>
      <PropertyGroup>
         <FSharpTargetsShim>$(MSBuildExtensionsPath32)\Microsoft\VisualStudio\v$(VisualStudioVersion)\FSharp\Microsoft.FSharp.targets</FSharpTargetsShim>
      </PropertyGroup>
    </Otherwise>
  </Choose>

  <Import Condition="Exists('$(FSharpTargetsShim)') and '$(NotBuildingUnderFSharpSdk)' == 'true'" Project="$(FSharpTargetsShim)" />

</Project>
