<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <MSBuildAllProjects>$(MSBuildAllProjects);$(MSBuildThisFileFullPath)</MSBuildAllProjects>
  </PropertyGroup>

  <PropertyGroup Condition="'$(_ShortFrameworkIdentifier)' == 'xamarinwatchos' or '$(_ShortFrameworkIdentifier)' == 'xamarin.watchos' ">
    <TargetFrameworkVersion Condition="'$(TargetFrameworkVersion)' == ''">v1.0</TargetFrameworkVersion>
    <IPhoneResourcePrefix Condition="'$(IPhoneResourcePrefix)' == ''">Resources</IPhoneResourcePrefix>
    <!-- Default to full until Xamarin supports PPDB's -->
    <DebugType>full</DebugType>
    <LanguageTargets>$(MSBuildExtensionsPath)\Xamarin\WatchOS\Xamarin.WatchOS.$(_SdkLanguageName).targets</LanguageTargets>
    <MtouchUseRefCounting Condition="'$(MtouchUseRefCounting)' == ''">true</MtouchUseRefCounting>
    <MtouchUseSGen Condition="'$(MtouchUseSGen)' == ''">true</MtouchUseSGen>
  </PropertyGroup>

  <ItemGroup Condition="'$(_ShortFrameworkIdentifier)' == 'xamarinwatchos' or '$(_ShortFrameworkIdentifier)' == 'xamarin.watchos' ">
    <Reference Include="System" />
    <Reference Include="System.Xml" />
    <Reference Include="System.Core" />
    <Reference Include="Xamarin.WatchOS" />
  </ItemGroup>
</Project>
