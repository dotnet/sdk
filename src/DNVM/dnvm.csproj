<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <Nullable>enable</Nullable>
    <InvariantGlobalization>true</InvariantGlobalization>
    <PublishAot>true</PublishAot>
    <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="Resources/env.sh" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Semver" />

    <PackageReference Include="Serde" />
    <PackageReference Include="Serde.CmdLine" />

    <PackageReference Include="Spectre.Console" />
    <PackageReference Include="StaticCs" />
    <PackageReference Include="StaticCs.Collections" />
    <PackageReference Include="StaticCs.Result" />
    <PackageReference Include="zio" />
  </ItemGroup>

  <Target Name="EmbedVersionInfo" BeforeTargets="BeforeBuild">
    <PropertyGroup>
      <GitVersionOutPath>$(IntermediateOutputPath)GitVersionInformation.g.cs</GitVersionOutPath>
      <GitVersonOutTemplate><![CDATA[
// <auto-generated />
// Do not edit this file manually.
internal static class GitVersionInformation
{
    public const string SemVer = "|GitVersion_SemVer|";
    public const string ShortSha = "|ShortSha|";
}
]]>
      </GitVersonOutTemplate>
      <GitVersonOutText>
        $(GitVersonOutTemplate
          .Replace("|GitVersion_SemVer|", "$(SemVer)")
          .Replace("|ShortSha|", "$(ShortSha)"))
      </GitVersonOutText>
    </PropertyGroup>

    <WriteLinesToFile
      File="$(GitVersionOutPath)"
      Lines="$(GitVersonOutText)"
      Overwrite="true"
      WriteOnlyWhenDifferent="true" />

    <ItemGroup>
      <Compile Include="$(GitVersionOutPath)" Condition="Exists($(GitVersionOutPath))" />
    </ItemGroup>
  </Target>

</Project>
