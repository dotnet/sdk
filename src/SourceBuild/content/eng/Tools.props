<Project>
  <Import Project="$(RepositoryEngineeringDir)VmrLayout.props" />

  <!-- Override RestoreSources in Source-Build builds so the Arcade SDK restores its packages from offline sources. -->

  <PropertyGroup>
    <RestoreSources Condition="'$(DotNetBuildSourceOnly)' == 'true' and '$(IsTestRun)' != 'true'">$(PreviouslySourceBuiltReferencePackagesDir);$(PrebuiltPackagesPath);$(PreviouslySourceBuiltPackagesPath)</RestoreSources>
  </PropertyGroup>
</Project>
