<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <StrongNameKeyId>Open</StrongNameKeyId>
    <VersionPrefix>1.0.0</VersionPrefix>
    <!--We need to compare ISymbols in a special way (by name) and roslyn symbol comparers take more heuristics into consideration.-->
    <NoWarn>RS1024;$(NoWarn)</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <!-- Please update RoslynMinVersion in Microsoft.NET.PackageValidation.targets when we use newer version of roslyn.-->
    <PackageReference Include="Microsoft.CodeAnalysis" Version="4.0.0-3.21372.2" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Resources.resx" GenerateSource="True" />
  </ItemGroup>

</Project>
