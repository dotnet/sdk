<Project>

  <Import Project="..\..\Directory.Packages.props" />

  <ItemGroup Condition="'$(DotNetBuildSourceOnly)' != 'true' and '$(SkipMicrosoftCodeAnalysisCSharpPinning)' != 'true'">
